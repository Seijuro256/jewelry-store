generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  handle      String   @unique  // Shopify's URL handle
  name        String
  description String   @db.Text  // HTML description from Shopify
  price       Float
  category    String
  type        String?  // Jewelry type
  images      String[]
  stock       Int
  materials   String[]
  vendor      String   @default("Yeah Noir Yeah")
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}